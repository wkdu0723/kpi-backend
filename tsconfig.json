{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@constant/*": ["constant/*"],
      "@defines/*": ["defines/*"],
      "@util/*": ["util/*"]
    }
  },
  "include": ["./src/**/*"]
}
